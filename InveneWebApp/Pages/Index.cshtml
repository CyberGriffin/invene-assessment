@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Upload your files here to sanitize them!</p>

    <form method="post" enctype="multipart/form-data">
